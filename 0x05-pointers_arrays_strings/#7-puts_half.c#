#include "main.h"

/**
 * puts_half - This function prints
 * half of a string
 *@str: connecting character 1
 * Return: 0.
 */

void puts_half(char *str)
{
int i = 0;
int j;

while (*(str + i))
i++;
j = i / 2;

if (i % 2)
j += 1;

while (j < i)
{
_putchar(*(str + j));
j++;
}
_putchar('\n');
}
void puts2(char *str)
{
  int i, j = 0;

  while (str[j] != '\0')
    {
      j++;
    }

  for (i = 0; i < j; i += 2)
    {
      _putchar(str[i]);
    }
  _putchar('\n');
  