#include "main.h"

/**
 * mul - This function prints
 * Multiplies two numbers
 *@a: connecting character 1
 *@b: connecting character 2
 * Return: 0.
 */
int _pow_recursion(int x, int y)
{

  if (y < 0)
    {
      return -1;
    }
  else if (y == 0)
    {
      return 1;
    }
  else if (y == 1)
    {
      return x;
    }
  else
    {
      return (pow (x, y - 1) * x);
    }
  return ();
}
