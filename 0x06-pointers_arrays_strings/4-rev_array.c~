#include "main.h"

/**
 * mul - This function prints
 * Multiplies two numbers
 *@a: connecting character 1
 *@b: connecting character 2
 * Return: 0.
 */
void reverse_array(int *a, int n)
{
  int x, y;

  for (x=0; x < n/2; x++)
    {
      y = a[x];
      a[x] = a[n-1-x];
      a[n-1-x] = y;
    }
}
